[Unit]
Description=anekacli
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
User=anekad
Group=anekad
PermissionsStartOnly=true
ExecStart=/usr/bin/anekacli rest-server --laddr {{GAIACLI_ADDRESS}}
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target

